<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>My Profile</h3>
            </div>
            <div class="panel-body">
                <h4>Avatar:</h4>                    
                <p><%= image_tag(@profile.avatar_url, :alt => "Avatar photo") %></p>
                
                <h4>Name:</h4>
                <p><%= @profile.name %></p>
                
                <h4>Email:</h4>
                <p><%= @profile.user.email %></p>
                <%= button_to 'Edit', edit_profile_path(@profile), :class => "btn btn-default", method: :get %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
              <h3>My Api Keys</h3>
            </div>
            <div class="panel-body">
              <% if @apikeys %>
                <div class="table-responsive">
                  <table class="table table-condensed table-bordered api-keys">
                    <thead>
                      <tr>
                        <th style="width:70%;">Key</th>
                        <th style="width:30%;">Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @apikeys.each do |key| %>
                      <tr>
                        <td><%= key.access_token %></td>
                        <td>
                          <button onClick="APIKeyDelete(<%= current_user.id %>, '<%= key.access_token %>')" class="btn btn-sm btn-warning">Remove Key</button>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              <% end %>
              <%= button_to 'Generate New Key', generate_path(@profile), :class => "btn btn-default", method: :get %>
            </div>
        </div>
    </div>
</div>

