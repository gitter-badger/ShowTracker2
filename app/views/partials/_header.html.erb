<header id="header">
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to home_path, :class => "navbar-brand" do %>
                    Show Tracker
                <% end %>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li></li>
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                    <li>
                        <%= form_tag search_path, :method => 'get', :class => "navbar-form pull-right" do %>
                            <div class="form-group">
                                <div class="input-group">
                                    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for Series"%>
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-primary">
                                            <i class='glyphicon glyphicon-search'></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </li>
                <% end %>
                
                <% if user_signed_in? %>
                    <% if current_user.profile %>
                        <li>
                            <p class="navbar-text pull-right login">Welcome <%= link_to current_user.profile.name, profile_path(current_user.id), :class => 'navbar-link' %> | <%= link_to 'Logout', destroy_user_session_path, :method => 'delete', :class => 'navbar-link' %> </p>
                        </li>    
                    <% else %>
                        <li>
                            <p class="navbar-text pull-right login">Welcome <%= link_to current_user.email, profile_path(current_user.id), :class => 'navbar-link' %> | <%= link_to 'Logout', destroy_user_session_path, :method => 'delete', :class => 'navbar-link' %> </p>
                        </li>
                    <% end %>
                <% else %>
                    <li>
                        <p class="navbar-text pull-right login"><%= link_to 'Login', new_user_session_path %></p>
                    </li>    
                <% end %>
            </div>
        </div>
    </nav>
</header>
