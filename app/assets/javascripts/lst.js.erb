function deleteFromWatchlist(userid, series) {
  if(deleteItem()) {
    var url = "/api/v1/user/" + userid + "/watchlist";
    data = {};
    data.series_id = series;
    $.ajax({
      url: url,
      type: "DELETE",
      data: data,
      success: function(resp) {
        if (resp["status"] == 200) {
          var table = $('#table').DataTable();
          var result = table.search(series);
          $('#tooltip').remove();
          result.row().remove();
          table.draw();
        }
      }
    });
  }
}

function deleteItem() {
  if (confirm("Are you sure? This cannot be undone.")) {
    return true;
  }
  return false;
}
